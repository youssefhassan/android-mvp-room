<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_image_height"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/city_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/detail_vertical_spacing"
        android:gravity="top|center"
        android:padding="@dimen/detail_text_padding"
        android:text="@string/city"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_image"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/detail_vertical_spacing"
        android:gravity="top|center"
        android:padding="@dimen/detail_text_padding"
        android:text="Yogyakarta"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/city_label"
        app:layout_constraintTop_toBottomOf="@id/detail_image"
        />

    <TextView
        android:id="@+id/num_hotels_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/detail_vertical_spacing"
        android:gravity="top|center"
        android:padding="@dimen/detail_text_padding"
        android:text="@string/number_of_hotels"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_label"/>

    <TextView
        android:id="@+id/num_hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/detail_vertical_spacing"
        android:gravity="top|center"
        android:padding="@dimen/detail_text_padding"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/num_hotels_label"
        app:layout_constraintTop_toBottomOf="@id/city_label"
        />

</android.support.constraint.ConstraintLayout>
